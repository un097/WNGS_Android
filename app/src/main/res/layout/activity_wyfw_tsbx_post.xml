<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical"
    tools:context="com.xuhai.wngs.ui.wyfw.WyfwTsbxPostActivity">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_public"
        android:gravity="start"
        android:hint="请输入你要投诉或者报修的内容"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"

        android:textColorHint="@color/color_text_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_dimen_48"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_public">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/image_wyfw_tsbx_post_phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_48"
            android:background="#00000000"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/color_text_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/image_wyfw_tsbx_post_camera" />

        <ImageView
            android:id="@+id/camera_two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/image_wyfw_tsbx_post_camera"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/camera_three"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/image_wyfw_tsbx_post_camera"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/btn_wyfw_tsbx_post_sure" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

</LinearLayout>

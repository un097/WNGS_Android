<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    tools:context="com.xuhai.wngs.ui.shzl.ShzlBldCARActivity">
    <RelativeLayout
        android:id="@+id/layout_qujiesuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="@color/bg_bld_tab_bar"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:textColor="@color/myred"
            android:text="0"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/image_bld_spxq_number"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/car_number"
            android:id="@+id/car_yang"
            android:layout_width="wrap_content"
            android:text="@string/yang"
            android:layout_marginLeft="4dp"
            android:textColor="@color/myred"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/car_jiage"
            android:layout_toRightOf="@id/car_yang"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_marginLeft="4dp"
            android:textColor="@color/myred"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/qujiesuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bld_public_qujiesuan"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>


        <ListView
            android:id="@+id/listView"
            android:layout_above="@+id/layout_qujiesuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:listSelector="@color/transparent"
            />



</RelativeLayout>

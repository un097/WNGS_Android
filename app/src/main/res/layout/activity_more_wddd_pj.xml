<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_bg"
    tools:context="com.xuhai.wngs.ui.more.MoreWdddPj">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_48"
        android:background="@drawable/bg_edit">
        <ImageView
            android:id="@+id/dd_pj_iv"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_more_wddd_woniugongshe"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/dd_pj_tv"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="蜗牛公社"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/dd_pj_star1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grey_star"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/dd_pj_star2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grey_star"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/dd_pj_star3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grey_star"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/dd_pj_star4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grey_star"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/dd_pj_star5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grey_star"
            android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
        android:id="@+id/dd_pj_et"
        android:gravity="top"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="写点评价吧,对其他朋友帮助很大哦!"
        android:textColorHint="@color/color_text_gray"
        android:background="@drawable/bg_edit"    />
    <ImageView
        android:id="@+id/dd_pj_bt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_wyfw_tsbx_post_sure"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content_touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                app:border_color="#ffffff"
                app:border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/content_touxiang"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/content_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#eb4c54"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content_nickname"
                    android:textColor="#ABABAB"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/content_pinglunshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content_nickname"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/content_date"
                    android:textColor="#ABABAB"
                    android:textSize="12sp"

                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_touxiang"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"

                />

            <View
                android:id="@+id/fenge"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/content_title"
                android:layout_marginTop="10dp"
                android:background="#ffdddddd" />

            <TextView
                android:id="@+id/content_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_title"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"

                />

            <LinearLayout
                android:id="@+id/tupian_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
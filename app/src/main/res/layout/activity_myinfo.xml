<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.xuhai.wngs.ui.more.MyinfoActivity">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_more_camera"
        app:border_color="@color/light"
        app:border_width="2dp" />


    <LinearLayout
        android:id="@+id/nickname_ll"
        android:layout_width="fill_parent"

        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/bg_edit">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="个人昵称" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:text="昵称"
            android:textColor="@color/color_text_gray" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/phone_ll"
        android:layout_width="fill_parent"

        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="个人电话" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:text="电话"
            android:textColor="@color/color_text_gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/message_ll"
        android:layout_width="fill_parent"

        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="个人说明" />

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:text="说明"
            android:textColor="@color/color_text_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/anquan_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="账户安全设置" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:drawableRight="@drawable/ic_more_arraw"
            android:textColor="@color/color_text_gray" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/upate_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="修改交易密码" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:drawableRight="@drawable/ic_more_arraw"
            android:textColor="@color/color_text_gray" />

    </LinearLayout>


    <ImageView
        android:id="@+id/tuichu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_myinfo_tuichu"
        android:textColor="#ffffff" />

</LinearLayout>

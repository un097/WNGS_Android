<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_list_left_right"
    android:paddingRight="@dimen/padding_list_left_right"
    android:paddingTop="@dimen/padding_list_top">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/head_qiuzhenxiang_public"
                android:scaleType="centerCrop"
             />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/image">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="虹馆"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:textColor="@color/color_text_gray"
                    android:text="活动时间："
                    />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/time_tv"
                    android:layout_alignTop="@id/time_tv"
                    android:singleLine="true"
                    android:text="东岭南街"
                    android:textColor="@color/color_text_gray" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
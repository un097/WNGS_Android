<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xuhai.wngs.ui.more.LoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_48"
        android:inputType="number"
        android:ems="10"
        android:hint="请输入手机号"
        android:paddingLeft="16dp"
        android:textColorHint="@color/color_text_gray"
        android:background="@drawable/bg_edit"
        android:id="@+id/et_username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_48"
        android:inputType="textPassword"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:hint="请输入密码"
        android:textColorHint="@color/color_text_gray"
        android:paddingLeft="16dp"
        android:id="@+id/et_password"
        android:layout_below="@+id/et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_forgt_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"
        android:text="忘记密码 ?"
        android:paddingLeft="32dp"
        android:layout_below="@id/et_password"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgt_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc"
            android:layout_weight="1"
            android:src="@drawable/btn_ic_more_login"/>

        <ImageView
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc"
            android:src="@drawable/btn_ic_more_register"
            android:layout_weight="1"/>

        </LinearLayout>
</RelativeLayout>
